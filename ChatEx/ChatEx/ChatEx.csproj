    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="MudBlazor" Version="8.3.0" />
		<PackageReference Include="OpenAI" Version="2.1.0" />
		<PackageReference Include="Refit" Version="8.0.0" />
