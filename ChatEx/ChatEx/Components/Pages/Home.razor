        cursor: pointer;
    }

    @@media (max-width: 900px) {
        .home-container {
            flex-direction: column;
            align-items: center;
        }
        
        .settings-panel {
            width: 100%;
            max-width: 800px;
            margin-top: 20px;
        }
    }

    @@media (max-width: 600px) {
        .features-grid {
            grid-template-columns: 1fr;
        }
        
        .action-buttons {
            flex-direction: column;
            gap: 10px;
        }
    }
</style>
